extends layout

block content
  header 
    nav(class="flex flex-col text-center sm_flex-row sm_text-left sm_justify-between py-4 px-6 bg-white shadow sm_items-baseline w-full")
        div(class="mb-2 sm_mb-0") 
          a(href='/' class="text-2xl no-underline text-grey-darkest hover_text-blue-500") MembersOnly
        div  
          a(href='/sign-up' class="text-lg no-underline text-grey-darkest hover_text-blue-500") Sign Up  
          a(href='/log-in' class="text-lg no-underline text-grey-darkest hover_text-blue-500 ml-2") Login
  h1= title
  p Welcome to #{title}
  if currentUser 
    h1 WELCOME BACK #{currentUser.username}
