extends layout

block content
  include nav.pug

  div(class="relative max-w-md mx-auto md_max-w-2xl bg-white w-full mb-6 shadow-lg rounded-xl mt-40") 
    div(class="flex flex-col gap-2 bg-stone-900 border-4 border-white text-white rounded")
      div.w-full.flex.justify-center
        div.relative
          img(src=`/images/${avatar}.svg`, alt=`${username}'s image` class="shadow-xl rounded-full align-middle border-none absolute -m-20 -ml-20 lg:-ml-20 max-w-[200px]")
      div(class="w-full text-center mt-20")
        div(class="text-center mt-2")
          p(class="text-2xl text-gray-50 font-bold leading-normal mb-1")= username
          div(class=" text-lg mt-0 mb-2 font-bold")
            p(class=" text-gray-100 opacity-75")= email 
          div(class=" text-lg mt-0 mb-2 font-bold")
            p(class=" text-gray-100 opacity-75") Membership: #{member}

        
